#!/usr/bin/env zsh

# Desc: lists ~/mybin/* with their embedded descriptions
# from https://github.com/zdharma/zplugin-configs/tree/master/psprint/functions

setopt localoptions extendedglob

local -a lines desc files
files=( $HOME/mybin/**/*(N) )

integer pass longest=0 longest2=0
local p file header="# Desc: "

# for p in "${files[@]}"; do
#   print $
# done

for (( pass = 1; pass <=2; ++ pass )); do
  for file in "${files[@]}"; do
    [[ -d "$file" ]] && continue
    lines=( ${(f)"$(<$file)"} )
    desc=( "${(M)lines[@]:#${header}*}" )
    desc[1]="${desc[1]#$header}"
    file="${file:t}"
    [[ "$file" = (LICENSE|README.md) ]] && continue
    if (( pass == 1 )); then
      (( longest < ${#file} + 3 )) && longest=$(( ${#file} + 3 ))
      (( longest2 < ${#desc[1]} )) && longest2=$(( ${#desc[1]} ))
    else
      echo "${file}${(l:longest-${#file}:: :):- }${desc[1]}"
    fi
  done
  # if (( pass == 2 )); then
  #   print -r -- ${(l:longest+longest2::-:):-}
  # fi
done

#         if (( pass == 2 )); then
#             if (( ${#files[@]} )); then
#                 else
#                     print -r -- ${(l:longest+longest2::-:):-}
#                 fi

