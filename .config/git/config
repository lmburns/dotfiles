[color "branch"]
  current = "#4c96a8" bold
  upstream = "#fe8019" bold
  local = "#dc3958"
  remote = "#819c3b"
  plain = "#733e8b"

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = 39
  commit = "#FF5813" bold
  whitespace = red reverse
  new = green bold
  old = red bold
  frag = magenta bold
