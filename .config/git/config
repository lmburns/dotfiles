[diff]
  algorithm = patience
  colorMoved = default
	indentHeuristic = on
  mnemonicPrefix = true
	compactionHeuristic = true
#  renames = copies

[log]
  decorate = auto
  abbrevCommit = true

[status]
  short = true
  branch = false

[fetch]
  prune = true

[push]
  # Push to the set upstream branch being tracked by default.
  default = current

