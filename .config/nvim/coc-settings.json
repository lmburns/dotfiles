    },
    "shellcheck": {
      "command": "shellcheck",
      "args": ["--format", "json", "--external-sources"],
      "sourceName": "shellcheck",
      "debounce": 100,
      "parseJson": {
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${code}]",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    },
    "systemd-analyze": {
      "command": "systemd-analyze",
      "debounce": 100,
      "args": [
        // "SYSTEMD_COLORS=0",
        "verify",
        "%filepath"
      ],
      "isStdout": false,
      "isStderr": true,
      "sourceName": "systemd-analyze",
      "formatLines": 1,
      "formatPattern": [
        // "^[^:]+:((\\d+):)?\\s*([^ -~]+)$",
        // "^[^:]+:((\\d+):)?\\s*([^\\x20-\\x7E]*)$",
        // "^[^:]+:((\\d+):)?\\s*([^\\p{C}]+)$",
        // "^[^:]+:((\\d+):)?\\s*(.*(?!\\p{C}))$",
        "^[^:]+:((\\d+):)?\\s*(.*)$",
        {
          "line": 2,
          "message": 3
        }
      ]
    }
  },
