  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.linters": {
    "jq": {
      "command": "jq",
      "args": ["-nf", "%file"],
      "isStdout": false,
      "isStderr": true,
      "debounce": 100,
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "jq",
      "formatLines": 1,
      "formatPattern": [
        "^jq: (error): syntax error, (.*) at <.*>, line (\\d+):$",
        {
          "security": 1,
          "message": 2,
          "line": 3
        }
      ]
    },
    "perl": {
      "command": "perl",
      "args": ["-w", "%file"],
      "sourceName": "perl",
      "isStderr": true,
      "isStdout": false,
      "debounce": 100,
      "formatLines": 1,
      "formatPattern": [
        "^(.*) at .* line (\\d+)(.)(.*)$",
        {
          "message": [1, 4],
          "line": 2,
          "security": "3"
        }
      ],
      "securities": {
        ",": "error",
        ".": "warning"
      },
      "offsetColumn": 0,
      "offsetLine": 0
    },
    "mypy": {
      "sourceName": "mypy",
      "command": "mypy",
      "args": [
        "--no-color-output",
        "--no-error-summary",
        "--show-column-numbers",
        "--show-error-end",
        "--install-types",
        "--follow-imports=silent",
        "--strict",
        "%file"
      ],
      // "formatPattern": [
      //   "^.*:(\\d+?):(\\d+?): ([a-z]+?): (.*)$",
      //   {
      //     "line": 1,
      //     "column": 2,
      //     "security": 3,
      //     "message": 4
      //   }
      // ],
      "formatPattern": [
        "^.*:(\\d+):(\\d+):(\\d+):(\\d+): ([a-z]+): (.*)$",
        {
          "line": 1,
          "column": 2,
          "endLine": 3,
          "endColumn": 4,
          "security": 5,
          "message": 6
        }
      ],
      "securities": {
        "error": "error",
        "note": "info"
      }
    },
    "ruff": {
      "sourceName": "ruff",
      "command": "ruff",
      "args": ["--quiet", "%file"],
      "formatPattern": [
        "^[\\w/\\.]+:(\\d+):(\\d+):\\s([A-Z]{1,3}\\d+)\\s(.+)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "F": "error",
        "E": "warning",
        "W": "warning",
        "I": "info",
        "D": "warning",
        "U": "info",
        "N": "warning",
        "S": "info",
        "C": "warning",
        "FBT": "warning",
        "B": "warning",
        "A": "info",
        "T": "hint",
        "Q": "hint",
        "ANN": "warning",
        "M": "hint"
      }
