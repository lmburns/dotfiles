  "Lua.workspace.maxPreload": 7000,
  "Lua.workspace.ignoreDir": [".vscode", ".git"],
  "Lua.workspace.preloadFileSize": 3000,
  "Lua.workspace.library": [
    "/home/lucas/.config/nvim/lua",
