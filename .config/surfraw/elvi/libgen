#!/usr/bin/env sh
# AUTHOR: lmburns (lmb@lmburns.com)
#
# DATE: 2021-06-13
#
# DESC: Elvi to search Library Genesis
# elvis: libgen         	-- Search Library Genesis for ebooks (libgen.rs)
. surfraw || exit 1

w3_usage_hook () {
    cat <<EOF
Usage: $w3_argv0 [options] [search words]...
Description:
  Search Gist (libgen.rs) for ebooks
EOF
    w3_global_usage
}

w3_config
w3_parse_args "$@"
if test -z "$w3_args"; then
    w3_browse_url "http://libgen.rs/"
else
    escaped_args=`w3_url_of_arg $w3_args`
    w3_browse_url "http://libgen.rs/search.php?req=${escaped_args}"
fi
