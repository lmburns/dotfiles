# GPG [[[
set crypt_opportunistic_encrypt=no   # encryption when recip key is available
set pgp_self_encrypt=yes             # also be encrypt to C_SmimeDefaultKey
set pgp_use_gpg_agent                # use pgp agent for caching passwords
set pgp_default_key='burnsac@me.com' # default key
set crypt_autosign=yes               # auto sign outgoing
# set pgp_autosign
set crypt_autoencrypt=no           # auto encrypt outgoing
# set pgp_replyencrypt
set crypt_replyencrypt=yes         # auto encrypt to replies that are encrypted
set crypt_replysign=yes            # auto encrypt replies that are signed
set crypt_replysignencrypted=yes   # auto sign replies that are encrypted


set crypt_use_gpgme=no             # gpgme backend
set crypt_autosmime=no             # auto enable smime signing

# Decode application/pgp (attachment)
set pgp_decode_command="gpg --status-fd=2 %?p?--pinentry-mode loopback --passphrase-fd 0? --no-verbose --quiet --batch --output - %f"

# Verify a signature
set pgp_verify_command="gpg --status-fd=2 --no-verbose --quiet --batch --output - --verify %s %f"

# Decrypt an attachment
set pgp_decrypt_command="gpg --status-fd=2 %?p?--pinentry-mode loopback --passphrase-fd 0? --no-verbose --quiet --batch --output - --decrypt %f"

# Mime signed attachment
set pgp_sign_command="gpg %?p?--pinentry-mode loopback --passphrase-fd 0? --no-verbose --batch --quiet --output - --armor --textmode %?a?--local-user %a? --detach-sign %f"

# Application/pgp inline
set pgp_encrypt_only_command="/usr/local/bin/pgpewrap gpg --batch --quiet --no-verbose --output - --textmode --armor --encrypt -- --recipient %r -- %f"

# Encrypted attachement
set pgp_encrypt_sign_command="/usr/local/bin/pgpewrap gpg %?p?--pinentry-mode loopback --passphrase-fd 0? --batch --quiet --no-verbose --textmode --output - %?a?--local-user %a? --armor --sign --encrypt -- --recipient %r -- %f"

# Import key
set pgp_import_command="gpg --no-verbose --import %f"

# Export key
set pgp_export_command="gpg --no-verbose --armor --export %r"

# Verify key
set pgp_verify_key_command="gpg --verbose --batch --fingerprint --check-sigs %r"

# Read public keyring
set pgp_list_pubring_command="gpg --no-verbose --batch --quiet --with-colons --with-fingerprint --with-fingerprint --list-keys %r"

# Read secret keyring
set pgp_list_secring_command="gpg --no-verbose --batch --quiet --with-colons --with-fingerprint --with-fingerprint --list-secret-keys %r"

set pgp_good_sign="^\\[GNUPG:\\] GOODSIG" # text indicating good sig

send-hook . "unmy_hdr From:"
send-hook . "set pgp_autosign"
send-hook . "set crypt_opportunistic_encrypt"

message-hook '!(~g|~G) ~b"^-----BEGIN\ PGP\ (SIGNED\ )?MESSAGE"' "exec check-traditional-pgp"

# source ~/.config/neomutt/gpg.rc
# ]]]

