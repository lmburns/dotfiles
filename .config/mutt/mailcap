# text/*; less '%s'; edit=vim '%s'; needsterminal; test=test -t 0
text/plain; $EDITOR %s ;
# text/html; openfile %s ; nametemplate=%s.html
# text/html; lynx -assume_charset=%{charset} -display_charset=utf-8 -dump %s; nametemplate=%s.html; copiousoutput;
text/html; w3m -I %{charset} -T text/html; copiousoutput;

# image/*; openfile %s ;
image/png; /usr/bin/sxiv %s
image/jpeg; /usr/bin/sxiv %s
video/*; setsid mpv --quiet %s &; copiousoutput
audio/*; mpv %s ; description="Audio"; needsterminal; test=test -t 0

# application/pdf; openfile %s ;
application/pdf; /usr/bin/zathura %s pdf

application/pgp-encrypted; gpg -d '%s';  copiousoutput;
application/pgp-keys; gpg --import '%s'; copiousoutput;

*/*; handlr open '%s'; test=expr "$DISPLAY" : :
