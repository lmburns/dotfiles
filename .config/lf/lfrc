  # git pull
  clear -x; git pull
}}
map gtP !{{
  # git pull --rebase
  clear -x; git pull --rebase
}}
map gtz !{{
  # git status
  clear -x; git status
}}
map gtl !{{
  # git log oneline
  clear -x; git la
}}
map gtL !{{
  # git log oneline stat
  clear -x; git lo
}}
map gl  ${{
  # git log full diff
  clear -x; git log -p
}}
map gts !{{
  # git log full diff+signature
  clear -x; git show --show-signature
}}
map go  &{{
  # open git repo URL
  git brws
}}

map gm :mgit_pull_rebase

