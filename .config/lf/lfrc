# TMUX: quit with :q
cmd q ${{
    emulate zsh -R -c "${XDG_CONFIG_HOME}/lf/scripts/tmux_helper --quit"
    lf -remote "send $id quit"
}}
cmd Q :q

# -- Tmux: Quit all with :q!
cmd q! ${{
    emulate zsh -R -c "${XDG_CONFIG_HOME}/lf/scripts/tmux_helper --quit-all"
    lf -remote "send $id quit"
}}
cmd Q! :q!
map <esc> quit

