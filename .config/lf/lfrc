map =  chmod        # change file permissions
map cH chown        # change file owner
map cr abs2rel_link # turn absolute symlink into relative

map ad disk-info # get disk information
map as ${{
  # directory info
  clear -x; du -hsx * | sort -rh | bat --paging=always
}}
map ai !{{
  # file information
  clear -x; file-info $f
}}
map aI ${{
  # dua interactive
  dua i
}}

map Tk !{{
  # tokei - code count
  clear -x; tokei
}}
# ]]] File Attributes

