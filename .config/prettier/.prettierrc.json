{
  "useTabs": false,
  "printWidth": 100,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "endOfLine": "lf",
  "trailingComma": "es5",
  "bracketSameLine": false,
  "arrowParens": "always",
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    }
  ]
}
