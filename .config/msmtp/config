aliases /etc/aliases

defaults
auth	on
tls	on
tls_trust_file	/etc/ssl/cert.pem
logfile /home/lucas/.config/msmtp/msmtp.log

account burnsac@me.com
host smtp.mail.me.com
port 587
from burnsac@me.com
user burnsac@me.com
passwordeval "pass burnsac@me.com"
auth on
tls on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile /home/lucas/.config/msmtp/msmtp.log
# tls_starttls

account lucas@lmburns.com
