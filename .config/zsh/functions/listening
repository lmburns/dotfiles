# Desc: listen on port entered

listening() {
    if [ $# -eq 0 ]; then
        sudo lsof -iTCP -sTCP:LISTEN -n -P
    elif [ $# -eq 1 ]; then
        sudo lsof -iTCP -sTCP:LISTEN -n -P | rg -i --color=always $1
    else
        echo "Usage: listening [pattern]"
    fi
}

listening "$@"

