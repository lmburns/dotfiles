# Desc: cd to nvim plugin dir

function pack() {
    local dir
    dir="$(\
        fd --color=always -td -d2 --search-path=$XDG_DATA_HOME/nvim/site/pack/packer \
            | fzf --delimiter / --with-nth 10..
    )"

    [[ -n "$dir" ]] && {
        [[ "$1" == "-p" ]] && {
            print -- "$dir"
        } || builtin cd "$dir"
    }
}

pack "$@"


