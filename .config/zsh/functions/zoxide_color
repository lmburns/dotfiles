# Desc: use zoxide with lscolors

# TODO: Get lscolors and the score column to work

zoxide_color() {
  builtin local result
  result="$(command zoxide query -l -- "$@" | lscolors | fzf)"
  [[ -n "$result" ]] && {
    __zoxide_cd "${result}"
  }
}

zoxide_color "$@"

