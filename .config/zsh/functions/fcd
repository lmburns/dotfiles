# Desc: change directories with fzf

emulate -L zsh

local dir=$(\
{
  [[ "$1" = <-> ]] && {
    fd ${2:-.} -d${1} --strip-cwd-prefix --follow -td
  } || {
    fd ${2:-.} -d1 --prune --strip-cwd-prefix --follow -td
  }
} \
  | lscolors \
  | fzf +m
)

if [[ -z "$dir" ]]; then
  zle && zle redisplay
  return 0
fi

builtin cd "$dir"

# vim:ft=zsh:
