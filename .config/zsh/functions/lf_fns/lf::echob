# @desc: send a fancy message with lf (banner)

function lf::echob() {
  # local textl equals str
  # textl=${(c)#*}
  # equals=${(l:(COLUMNS - textl - 2) / 2::=:):-}
  # str="%F{52}$equals%f %F{53}%B${*}%b%f %F{52}$equals%f"
