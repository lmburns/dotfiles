# cf() {
  emulate -L zsh
  zmodload -Fa zsh/param/private b:private
  setopt extendedglob globstarshort nullglob rcexpandparam \
         no_shortloops warncreateglobal

  private body=$@[-1]

  shift -p 1
  eval "$* () {
    unfunction $*
    $body
    \${(%):-%N} "\$@"
  }"
# }
