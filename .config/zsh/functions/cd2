# Desc: cd that can cd to paths that are files

function cd() {
  local pth="${1}"
  if [[ -z "$pth" ]] {
    builtin cd
    return
  }

  if [[ -d "${pth}" ]] {
    builtin cd "${(b)pth}"
  } else {
    builtin cd ${(b)pth:h}
  }
}

cd "$@"

