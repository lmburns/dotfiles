# Desc: Iterates over .git directories, runs git "\$@"

# Foreach *.git directory
local PAUSE=0 i
for i in **/.git; do
    builtin print "\n$fg_bold[yellow]${(U)i}$reset_color\n"
    LANG=C command sleep $PAUSE
    builtin cd -q "${i:h}"
    command git "$@"
    builtin cd -q ..
    PAUSE="0.5"
done

# vim:ft=zsh:et
