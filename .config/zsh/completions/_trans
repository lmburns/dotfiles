#compdef trans

local arguments

arguments=(
   {-V,-version}'[Print version and exit]'
   {-H,-help}'[Print help message and exit]'
   {-M,-man}'[Show man page and exit]'
   {-T,-reference}'[Print reference table of languages and exit]'
   {-R,-reference}'[english Print reference table of languages (in English names) and exit]'
   {-L,-list}'[print details of languages and exit]:codes:'
   {-S,-list-engines}'[list available translation engines and exit]'
   {-U,-upgrade}'[check for upgrade of this program]'
   {-e,-engine}'[specify the translation engine to use]:engine:'
   '-verbose[verbose mode]'
   {-b,-brief}'[brief mode]'
   {-d,-dictionary}'[dictionary mode]'
   '-identify[language identification]'
   '-show-original[show original text or not]:yes/no:'
   '-show-original-phonetics[show phonetic notation of original text or not]:yes/no:'
   '-show-translation[show translation or not]:yes/no:'
   '-show-translation-phonetics[show phonetic notation of translation or not]:yes/no:'
   '-show-prompt-message[show prompt message or not]:yes/no:'
   '-show-languages[show source and target languages or not]:yes/no:'
   '-show-original-dictionary[show dictionary entry of original text or not]:yes/no:'
   '-show-dictionary[show dictionary entry of translation or not]:yes/no:'
   '-show-alternatives[show alternative translations or not]:yes/no:'
   {-w,-width}'[specify the screen width for padding]:num:'
   '-indent[specify the size of indent]:number of spaces:'
   '-theme[specify the theme to use]:filename:_files'
   '-no-theme[do not use any other theme than default]'
   '-no-ansi[do not use ANSI escape codes]'
   '-no-autocorrect[do not autocorrect]'
   '-no-bidi[do not convert bidirectional texts]'
   '-bidi[always convert bidirectional texts]'
   '-no-warn[do not write warning messages to stderr]'
   '-dump[print raw API response instead]'
   {-p,-play}'[Listen to the translation]'
   '-speak[listen to the original text]'
   {-n,-narrator}'[specify the narrator, and listen to the translation]:narrator:'
   '-player[specify the audio player to use, and listen to the translation]'
   '-no-play[do not listen to the translation]'
   '-no-translate[do not translate anything when using -speak]'
   '-download-audio[download the audio to the current directory]'
   '-download-audio-as[download the audio to the specified file]:filename:_files'
   {-v,-view}'[view the translation in a terminal pager]'
   '-pager[specify the terminal pager to use, and view the translation]:pager:_commands'
   {-no-view,-no-pager}'[do not view the translation in a terminal pager]'
   '-browser[specify the web browser to use]:browser:_commands'
   '-no-browser[do not open the web browser]'
   {-x,-proxy}'[use HTTP proxy on given port]:host\:port:'
   {-u,-user}-agent'[specify the User-Agent to identify as]:user-agent:'
   {-4,-ipv4,-inet4-only}'[connect only to IPv4 addresses]'
   {-6,-ipv6,-inet6-only}'[connect only to IPv6 addresses]'
   {-I,-interactive,-shell}'[start an interactive shell]'
   {-E,-emacs}'[start the GNU Emacs front-end for an interactive shell]'
   '-no-rlwrap[do not invoke rlwrap when starting an interactive shell]'
   {-i,-input}'[specify the input file]:filename:_files'
   {-o,-output}'[specify the output file]:filename:_files'
   {-l,-hl,-lang}'[specify your home language]:code:'
   {-s,-sl,-source,-from}'[specify the source language(s), joined by "+"]'
   {-t,-tl,-target,-to}'[specify the target language(s), joined by "+"]'
   {-j,-join-sentence}'[treat all arguments as one single sentence]'
   '-no-init[do not load any initialization script]'
  '*:filename:_files'
)

_arguments -s $arguments
