#compdef rofi

#===========================================================================
#    @author: Lucas Burns <burnsac@me.com> [lmburns]                       #
#   @created: 2023-06-06                                                   #
#===========================================================================

autoload -U is-at-least

_rofi() {
  local curcontext="$curcontext"
  local -a context line state state_descr
  local -A opt_args
  local -a rofi_args _arguments_options
  integer ret=1

  if is-at-least 5.2; then
      _arguments_options=(-s -S)
  else
      _arguments_options=(-s)
  fi

  rofi_args=(
    "-config[load an alternative configuration]:config:_files"
    "-no-config[do not load configuration, use default values]"
    "-dmenu[start in dmenu mode]"
    "-display[x server to contact]:server:"
    "-e[show a dialog displaying the passed message and exit]"
    "-markup[enable pango markup where possible]"
    "-normal-window[behave as a normal window. (experimental)]"
    "-show[show the mode 'mode' and exit. The mode has to be enabled]"
    "-no-lazy-grab[disable lazy grab that, when fail to grab keyboard, does not block but retry later]"
    "-no-plugins[disable loading of external plugins]"
    "-plugin-path[directory used to search for rofi plugins. *DEPRECATED*]"
    "-dump-config[dump the current configuration in rasi format and exit]"
    "-dump-theme[dump the current theme in rasi format and exit]"
    "-mesg[print a small user message under the prompt (uses pango markup)]"
    "-p[prompt to display left of entry field]"
    "-selected-row[select row]"
    "-format[output format string]"
    "-u[list of row indexes to mark urgent]"
    "-a[list of row indexes to mark active]"
    "-l[number of rows to display]"
    "-window-title[set the dmenu window title]"
    "-i[set filter to be case insensitive]"
    "-only-match[force selection to be given entry, disallow no match]"
    "-no-custom[don't accept custom entry, allow no match]"
    "-select[select the first row that matches]"
    "-password[do not show what the user inputs. Show '*' instead]"
    "-markup-rows[allow and render pango markup as input data]"
    "-sep[element separator]"
    "-input[read input from file instead from standard input]"
    "-sync[force dmenu to first read all input data, then show dialog]"
    "-w[position over window with X11 windowid]"
    "-keep-right[set ellipsize to end]"
    "-display-columns[only show the selected columns]"
    "-display-column-separator[separator to use to split columns (regex)]"
    "-ballot-selected-str[when multi-select is enabled prefix this string when element is selected]"
    "-ballot-unselected-str[when multi-select is enabled prefix this string when element is not selected]"
    "-modes[enable modes]"
    "-font[font to use]"
    "-location[location on screen]"
    "-yoffset[y-offset relative to location. *DEPRECATED* see rofi-theme manpage for new option]"
    "-xoffset[x-offset relative to location. *DEPRECATED* see rofi-theme manpage for new option]"
    "-[no-]fixed-num-lines[Always show number of lines]"
    "-terminal[terminal to use]"
    "-ssh-client[ssh client to use]"
    "-ssh-command[ssh command to execute]"
    "-run-command[run command to execute]"
    "-run-list-command[command to get extra run targets]"
    "-run-shell-command[run command to execute that runs in shell]"
    "-window-command[command to executed when -kb-accept-alt binding is hit on selected window ]"
    "-window-match-fields[window fields to match in window mode]"
    "-icon-theme[theme to use to look for icons]"
    "-drun-match-fields[desktop entry fields to match in drun]"
    "-drun-categories[only show Desktop entry from these categories]"
    "-drun-display-format[dRUN format string. (Supports- generic,name,comment,exec,categories)]"
    "-drun-url-launcher[command to open a Desktop Entry that is a Link]"
    "-ignored-prefixes[programs ignored for history]"
    "-sorting-method[choose the strategy used for sorting- normal (levenshtein) or fzf]"
    "-eh[row height (in chars)]"
    "-combi-modes[set the modi to combine in combi mode]"
    "-matching[set the matching algorithm. (normal, regex, glob, fuzzy, prefix)]"
    "-m[monitor id to show on]"
    "-5[(Default)]"
    "-filter[pre-set filter]"
    "-dpi[dPI]"
    "-threads[threads to use for string matching]"
    "-scroll-method[scrolling method. (0- Page, 1- Centered)]"
    "-window-format[window Format. w (desktop name), t (title), n (name), r (role), c (class)]"
    "-max-history-size[max history size (WARNING- can cause slowdowns when set too high)]"
    "-combi-display-format[combi format string. (Supports- mode, text)]"
    "-matching-negate-char[set the character used to negate the matching. ('\\0' to disable)]"
    "-cache-dir[directory where history and temporary files are stored]"
    "-application-fallback-icon[fallback icon to use when the application icon is not found in run/drun]"
    "-refilter-timeout-limit[when there are more entries then this limit, only refilter after a timeout]"
    "-pid[pidfile location]"
    "-display-window[the display name of this browser]"
    "-display-windowcd[the display name of this browser]"
    "-display-run[the display name of this browser]"
    "-display-ssh[the display name of this browser]"
    "-display-drun[the display name of this browser]"
    "-display-combi[the display name of this browser]"
    "-display-keys[the display name of this browser]"
    "-display-filebrowser[the display name of this browser]"
    "-display-file-browser-extended[(string) The display name of this browser]"
    "-kb-primary-paste[paste primary selection]"
    "-kb-secondary-paste[paste clipboard]"
    "-kb-clear-line[clear input line]"
    "-kb-move-front[beginning of line]"
    "-kb-move-end[end of line]"
    "-kb-move-word-back[move back one word]"
    "-kb-move-word-forward[move forward one word]"
    "-kb-move-char-back[move back one char]"
    "-kb-move-char-forward[move forward one char]"
    "-kb-remove-word-back[delete previous word]"
    "-kb-remove-word-forward[delete next word]"
    "-kb-remove-char-forward[delete next char]"
    "-kb-remove-char-back[delete previous char]"
    "-kb-remove-to-eol[delete till the end of line]"
    "-kb-remove-to-sol[delete till the start of line]"
    "-kb-accept-entry[accept entry]"
    "-kb-accept-custom[use entered text as command (in ssh/run modes)]"
    "-kb-accept-custom-alt[use entered text as command (in ssh/run modes)]"
    "-kb-accept-alt[use alternate accept command]"
    "-kb-delete-entry[delete entry from history]"
    "-kb-mode-next[switch to the next mode]"
    "-kb-mode-previous[switch to the previous mode]"
    "-kb-mode-complete[start completion for mode]"
    "-kb-row-left[go to the previous column]"
    "-kb-row-right[go to the next column]"
    "-kb-row-up[select previous entry]"
    "-kb-row-down[select next entry]"
    "-kb-row-tab[go to next row, if one left, accept it, if no left next mode]"
    "-kb-element-next[go to next element (in logical order)]"
    "-kb-element-prev[go to next previous element (in logical order)]"
    "-kb-page-prev[go to the previous page]"
    "-kb-page-next[go to the next page]"
    "-kb-row-first[go to the first entry]"
    "-kb-row-last[go to the last entry]"
    "-kb-row-select[set selected item as input text]"
    "-kb-screenshot[take a screenshot of the rofi window]"
    "-kb-ellipsize[toggle between ellipsize modes for displayed data]"
    "-kb-toggle-case-sensitivity[toggle case sensitivity]"
    "-kb-toggle-sort[toggle sort]"
    "-kb-cancel[quit rofi]"
    "-kb-custom-1[custom keybinding 1]"
    "-kb-custom-2[custom keybinding 2]"
    "-kb-custom-3[custom keybinding 3]"
    "-kb-custom-4[custom keybinding 4]"
    "-kb-custom-5[custom Keybinding 5]"
    "-kb-custom-6[custom keybinding 6]"
    "-kb-custom-7[custom Keybinding 7]"
    "-kb-custom-8[custom keybinding 8]"
    "-kb-custom-9[custom keybinding 9]"
    "-kb-custom-10[custom keybinding 10]"
    "-kb-custom-11[custom keybinding 11]"
    "-kb-custom-12[custom keybinding 12]"
    "-kb-custom-13[custom keybinding 13]"
    "-kb-custom-14[custom keybinding 14]"
    "-kb-custom-15[custom keybinding 15]"
    "-kb-custom-16[custom keybinding 16]"
    "-kb-custom-17[custom keybinding 17]"
    "-kb-custom-18[custom keybinding 18]"
    "-kb-custom-19[custom Keybinding 19]"
    "-kb-select-1[select row 1]"
    "-kb-select-2[select row 2]"
    "-kb-select-3[select row 3]"
    "-kb-select-4[select row 4]"
    "-kb-select-5[select row 5]"
    "-kb-select-6[select row 6]"
    "-kb-select-7[select row 7]"
    "-kb-select-8[select row 8]"
    "-kb-select-9[select row 9]"
    "-kb-select-10[select row 10]"
    "-ml-row-left[go to the previous column]"
    "-ml-row-right[go to the next column]"
    "-ml-row-up[select previous entry]"
    "-ml-row-down[select next entry]"
    "-me-select-entry[select hovered row]"
    "-me-accept-entry[accept hovered row]"
    "-me-accept-custom[accept hovered row with custom action]"

    + '(about)'
    '(: * -)'{-v,--version}"[print the version number and exit]"
    '(: * -)'{-h,-help}"[this help message]"
  )

  _arguments $_arguments_options : $rofi_args && ret=0
}
